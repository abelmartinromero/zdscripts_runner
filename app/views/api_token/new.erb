<%= form_tag({controller: "api_token" , action: 'verify_credentials'}, method: "post", class: "form-horizontal", role: "form") do %>
<div class="form-group">
	<div class="col-sm-12 col-lg-12">
	  <%= text_field_tag "subdomain", nil, placeholder:"Subdomain" , :required => true, class:"form-control" %>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-12 col-lg-12">
	  <%= text_field_tag "token", nil, placeholder:"Api Token" , :required => true, class:"form-control" %>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-12 col-lg-12">
	  <%= text_field_tag "email", nil, placeholder:"Email" , :required => true, class:"form-control" %>
	</div>
</div>
<%= submit_tag("Add") %>
<% end %>